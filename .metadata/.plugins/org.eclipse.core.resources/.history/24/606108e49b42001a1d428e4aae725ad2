import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.scene.layout.BorderPane;
import javafx.stage.Stage;

public class p97 extends Application {

	@Override
	public void start(Stage primaryStage) throws Exception {
		primaryStage.setTitle("Billboard Chart 2017");
		BorderPane root = (BorderPane) FXMLLoader.load(getClass().getResource("Billboardfx2.fxml"));
		// 가로 1400 세로 800 설정
		Scene scene = new Scene(root, 1400, 800);
		//css파일을 읽어 scene에 대입
		scene.getStylesheets().add(getClass().getResource("application.css").toExternalForm());
		//대입된 scene을 대입
		primaryStage.setScene(scene);
		primaryStage.getIcons().add(getClass().getResourceAsStream("logo.png")));
		
		

	}

}
