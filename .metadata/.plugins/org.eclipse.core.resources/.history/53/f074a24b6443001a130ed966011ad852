package Ans200130;

public class CardRule {
	/**
	 * C3C8 3000 38광땡 C1C3 C1C8 2000 광땡 CTST x100 1000 장떙 CXSX x100 X00 구땡 C1S2 C2S1
	 * 99 알리 C1S4 S1C4 98 독사 C1S9 S9C1 97 삥 C1ST STC1 96 장삥 CTS4 STC4 95 장사 C4S6
	 * S4C6 94 세륙 끗 X 10
	 */
	public int toV(Card c) {
		int count = 0;
		switch (c.getCardVal().charAt(1)) {
		case 'A':
			count = 1;
			break;
		case 'T':
			count = 10;
			break;
		default:
			count = c.getCardVal().charAt(1) - '0';
			break;
		}
		return count;
	}

	// 광 찾기
	public boolean isLight(Card c) {
		boolean isL = false;
		if (c.getCardVal().charAt(0) == 'C') {
			isL = true;
		}
		return isL;
	}

	private boolean is138(Card c) {
		boolean is138 = false;
		if (isLight(c)) {
			if (c.getCardVal().charAt(1) == '1' || c.getCardVal().charAt(1) == '3' || c.getCardVal().charAt(1) == '8') {
				is138 = true;
			}
		}
		return is138;
	}

	public int rule(Card c1, Card c2) {
		int count = 0;
		if (is138(c1) && is138(c2)) {
			if ((toV(c1) * toV(c2) == 24) && (toV(c1) + toV(c2) == 11)) {
				count = 3000;
			} else if ((toV(c1) * toV(c2) == 3) && (toV(c1) + toV(c2) == 4)) {
				count = 2000;
			} else if ((toV(c1) * toV(c2) == 8) && (toV(c1) + toV(c2) == 9)) {
				count = 2000;
			} else {
				// 땡처리
				if ((toV(c1) == toV(c2))) {
					count = toV(c1) * 100;
				} else {
					// 땡이 아닐때
					if ((toV(c1) * toV(c2) == 4) && (toV(c1) + toV(c2) == 5)) {
						count = 99;
					}
				}

			}
		}
	}

}
