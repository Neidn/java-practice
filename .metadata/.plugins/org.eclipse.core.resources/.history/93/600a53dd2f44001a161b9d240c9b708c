package Ans200131;

public class Sutda {
	CardCase cc = new CardCase();
	CardRule rule = new CardRule();
	Card[] cc1 = new Card[CardUtil.SUTDA];
	Card[] cc2 = new Card[CardUtil.SUTDA];

	public Sutda() {
		cc.make();
	}

	// 두장씩 나누기
	private void divide() {
		for (int i = 0; i < CardUtil.SUTDA; i++) {
			// 0,1
			cc1[i] = cc.getCard(i);
			// 2,3
			cc2[i] = cc.getCard(i + CardUtil.SUTDA);
		}
	}
}
